<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.creative_it_spa.mascotas_2.Marcador">

    <include
        android:id="@+id/barra_sup"
        layout="@layout/barra" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">



        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurar Cuenta"
        android:textSize="25sp"
        android:textColor="@color/negro"
        android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario Instagram"
            android:textSize="20sp"
            android:textColor="@color/negro"
            android:layout_gravity="center_horizontal"/>


        <EditText
            android:id="@+id/cuenta_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cuenta_usuario"
            android:layout_marginTop="40dp"
            />

        <Button
            android:id="@+id/bt_buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar Usuario"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"/>



        <Button
            android:id="@+id/bt_configurar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurar Cuenta"
            android:layout_marginTop="80dp"/>



    </LinearLayout>
</LinearLayout>